<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/monitor_row_margins"
        android:layout_marginEnd="@dimen/monitor_dimen_gap"
        android:layout_marginStart="@dimen/monitor_row_margins"
        android:layout_weight="1"
        android:textColor="@color/monitor_class_name"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/monitor_row_margins"
        android:textColor="@color/monitor_class_name" />
</LinearLayout>