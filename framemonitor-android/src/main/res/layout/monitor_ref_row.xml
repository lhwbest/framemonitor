<com.vip001.monitor.widget.RowElementLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <com.vip001.monitor.widget.DisplayLeakConnectorView
        android:id="@+id/row_connector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.vip001.monitor.widget.MoreDetailsView
        android:id="@+id/row_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lib:monitor_plus_color="@color/monitor_class_name" />

    <TextView
        android:id="@+id/row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/monitor_class_name" />

    <TextView
        android:id="@+id/row_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/monitor_class_name"
        android:visibility="gone" />

</com.vip001.monitor.widget.RowElementLayout>